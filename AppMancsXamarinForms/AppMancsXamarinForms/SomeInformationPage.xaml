<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.SomeInformationPage"
             Title="Magadról..."
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout 
                Style="{StaticResource NormalStackLayout}">
            <controls:CircleImage
                x:Name="profilePictureImage"
                Aspect="AspectFit">
                <controls:CircleImage.WidthRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android, iOS">65</On>
                        <On Platform="WinPhone">75</On>
                    </OnPlatform>
                </controls:CircleImage.WidthRequest>
                <controls:CircleImage.HeightRequest>
                    <OnPlatform x:TypeArguments="x:Double">
                        <On Platform="Android, iOS">65</On>
                        <On Platform="WinPhone">75</On>
                    </OnPlatform>
                </controls:CircleImage.HeightRequest>
            </controls:CircleImage>
            <!--<Button
                Text="Módosít"
                x:Name="changePictureButton"
                Clicked="changePictureButton_Clicked"/>-->
            <Label
                Text="Vezetéknév"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="lastnameEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="Keresztnév"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="firstnameEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="E-Mail"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="emailEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="Jelszó"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="pwEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Button
                Text="Regisztráció"
                x:Name="signupButton"
                Style="{StaticResource NormalButton}"
                Clicked="signupButton_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>