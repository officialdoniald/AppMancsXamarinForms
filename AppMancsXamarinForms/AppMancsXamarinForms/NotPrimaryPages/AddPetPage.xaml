<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.NotPrimaryPages.AddPetPage"
             Title="Add pet"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">

    <ContentPage.Content>
        <ScrollView>
        <StackLayout
                Style="{StaticResource NormalStackLayout}">
            <Button
                Text="Gallery"
                x:Name="galleryButton"
                Style="{StaticResource NormalButton}"
                Clicked="galleryButton_ClickedAsync"/>
            <Image
                x:Name="profilePictureImage"
                Aspect="AspectFit"
                Margin="0,20,0,0"
                HeightRequest="75">
            </Image>
            <Label
                Text="Name:"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="nameEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="Age:"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="ageEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="Species:"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="typeEntry"
                Style="{StaticResource NormalEnrty}"/>
            <StackLayout Orientation="Horizontal">
                <Switch
                    x:Name="shelterpetSwitch"/>
                <Label
                    Text="Shelter pet?:"
                Style="{StaticResource NormalLabel}"
                    VerticalOptions="Center"/>
            </StackLayout>
            <Button
                Text="Add"
                x:Name="addPetButton"
                Style="{StaticResource NormalButton}"
                Clicked="addPetButton_ClickedAsync"/>
            <ActivityIndicator IsRunning="false" x:Name="uploadActivity"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>