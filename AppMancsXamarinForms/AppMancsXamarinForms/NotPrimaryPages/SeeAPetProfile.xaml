<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.NotPrimaryPages.SeeAPetProfile"
             Title="Háziállat profil">
    <ContentPage.Content>
        <StackLayout>
            <Image
                    x:Name="profilePictureImage"
                />
            <Label 
                x:Name="petnameLabel"/>
            <Button
                    x:Name="followButton"
                    Clicked="followButton_Clicked"
                />
            <Button
                    x:Name="goToOwnerPageButton"
                    Clicked="goToOwnerPageButton_Clicked"
                Text="Ugrás a gazdi profiljára"
                />
            <Grid x:Name="pictureListGrid"></Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>