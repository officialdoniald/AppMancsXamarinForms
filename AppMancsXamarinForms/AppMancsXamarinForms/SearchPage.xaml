<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.SearchPage"
             Title="Keresés">
    <ContentPage.Content>
        <StackLayout
            Orientation="Vertical">
            <Entry
                x:Name="searchEntry"
                Placeholder="Írj ami érdekel"
                TextChanged="searchEntry_TextChanged"/>
            
                <ListView ItemTapped="searchListView_ItemTapped" ItemsSource="{Binding searchModelList}" x:Name="searchListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding hashtag}"/>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>