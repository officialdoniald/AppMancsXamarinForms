<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.ForgotPasswordPage"
             Title="Elfelejtett jelszó">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label
                Text="E-Mail címed:"/>
            <Entry
                x:Name="emailEntry"
                Placeholder="E-mail"/>
            <Button
                x:Name="sendNewPassword"
                Text="Új jelszó küldése"
                Clicked="sendNewPassword_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>