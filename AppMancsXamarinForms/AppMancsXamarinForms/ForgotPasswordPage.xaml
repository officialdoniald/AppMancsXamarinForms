<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.ForgotPasswordPage"
             Title="Elfelejtett jelszó">
    <ContentPage.Content>
        <StackLayout
                Style="{StaticResource NormalStackLayout}">
            <Image
                Style="{StaticResource Logo}"
                Source="logo.jpg"/>
            <Label
                Text="E-Mail címed:"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="emailEntry"
                Placeholder="E-mail"
                Style="{StaticResource NormalEnrty}"/>
            <Button
                x:Name="sendNewPassword"
                Text="Új jelszó küldése"
                Clicked="sendNewPassword_Clicked"
                Style="{StaticResource NormalButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>