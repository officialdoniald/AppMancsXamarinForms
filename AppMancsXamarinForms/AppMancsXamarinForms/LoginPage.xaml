<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.LoginPage"
             Title="AppMancs">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout
                Style="{StaticResource NormalStackLayout}">
            <Image
                Style="{StaticResource Logo}"
                Source="logo.jpg"/>
            <Button
                x:Name="loginFacebookButton"
                Style="{StaticResource FacebookButton}"
                Text="Bejelentkezés Facebook fiókkal"
                Clicked="loginFacebookButton_Clicked"/>
            <Label
                Text="Vagy"
                Style="{StaticResource NormalLabel}"/>
            <Label
                Text="E-Mail:"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="emailEntry"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="Jelszó:"
                Style="{StaticResource EntryAboveLabel}"/>
            <Entry
                x:Name="pwEntry"
                IsPassword="True"
                Style="{StaticResource NormalEnrty}"/>
            <Label
                Text="Elfelejtett jelszó"
                Style="{StaticResource NormalLabel}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer
                            NumberOfTapsRequired="1"
                            Tapped="TapGestureRecognizer_Tapped"/>
                    </Label.GestureRecognizers>
            </Label>
            <Button
                x:Name="loginButton"
                Style="{StaticResource NormalButton}"
                Text="BEJELENTKEZÉS"
                Clicked="loginButton_Clicked"/>
            <Label
                Text="Nem vagy még tag?"
                Style="{StaticResource NormalLabel}"/>
            <Button
                x:Name="signUpButton"
                Style="{StaticResource NormalButton}"
                Text="REGISZTRÁLOK"
                Clicked="signUpButton_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>