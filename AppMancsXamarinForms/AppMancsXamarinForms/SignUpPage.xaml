<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.SignUpPage"
             Title="Regisztráció">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Button
                x:Name="loginFacebookButton"
                Text="Regisztráció Facebook fiókkal"
                Clicked="loginFacebookButton_Clicked"/>
            <Label
                Text="Vezetéknév"/>
            <Entry
                x:Name="lastnameEntry"/>
            <Label
                Text="Keresztnév"/>
            <Entry
                x:Name="firstnameEntry"/>
            <Label
                Text="E-Mail"/>
            <Entry
                x:Name="emailEntry"/>
            <Label
                Text="Jelszó"/>
            <Entry
                x:Name="pwEntry"/>
            <Button
                Text="Regisztráció"
                x:Name="signupButton"
                Clicked="signupButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>