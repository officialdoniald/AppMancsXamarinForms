<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.HomePage"
             Title="Fal"
             xmlns:controls="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin.Abstractions">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ListView 
                    BackgroundColor="Transparent" 
                    SeparatorVisibility="None" 
                    HasUnevenRows="True" 
                    ItemsSource="{Binding wallListViewAdapter}" 
                    x:Name="wallListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid
                                    BackgroundColor="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="350"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <controls:CircleImage
                                        Source="{Binding profilepictureURL}" 
                                        Aspect="AspectFit"
                                        Margin="0,20,0,0"
                                        Grid.Row="0"
                                        Grid.Column="0">
                                        <controls:CircleImage.WidthRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android, iOS">45</On>
                                                <On Platform="WinPhone">75</On>
                                            </OnPlatform>
                                        </controls:CircleImage.WidthRequest>
                                        <controls:CircleImage.HeightRequest>
                                            <OnPlatform x:TypeArguments="x:Double">
                                                <On Platform="Android, iOS">45</On>
                                                <On Platform="WinPhone">75</On>
                                            </OnPlatform>
                                        </controls:CircleImage.HeightRequest>
                                    </controls:CircleImage>
                               <Label
                                    Style="{StaticResource NormalLabel}"
                                    Text="{Binding petName}"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    Margin="0,20,0,0"
                                    Grid.Row="0"
                                    Grid.Column="1">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer
                                            NumberOfTapsRequired="1"
                                            Tapped="TapGestureRecognizer_Tapped"
                                        ></TapGestureRecognizer>    
                                    </Label.GestureRecognizers>
                                </Label>
                                <Image 
                                    Aspect="AspectFit"
                                    Source="{Binding pictureURL}"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2" />
                                <Image
                                    Source="{Binding followButtonText}"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    Grid.Row="2"
                                    Grid.Column="0">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer
                                            NumberOfTapsRequired="1"
                                            Tapped="Button_Clicked_1"/>
                                    </Image.GestureRecognizers>
                                </Image>    
                                <Label      
                                    Text="{Binding howManyLikes}"
                                    Style="{StaticResource NormalLabel}"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    Grid.Row="2"
                                    Grid.Column="1">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer
                                            NumberOfTapsRequired="1"
                                            Tapped="TapGestureRecognizer_Tapped_1"
                                        ></TapGestureRecognizer>
                                    </Label.GestureRecognizers>
                                </Label>
                                <Label
                                    Text="{Binding hashtags}"
                                    Style="{StaticResource NormalLabel}"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Start"
                                    Margin="20,0,0,0"
                                    Grid.Row="3"
                                    Grid.ColumnSpan="2"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>