<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.UploadPhotoPage"
             Title="Kép hozzáadása">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Button
                Text="Galéria"
                x:Name="galleryButton"
                Clicked="galleryButton_ClickedAsync"/>
            <Image
                x:Name="pictureImage"/>
            <Picker
                x:Name="petPicker"
                Title="Háziállataim"
                VerticalOptions="Center"
                SelectedIndexChanged="petPicker_SelectedIndexChanged"/>
            <Entry 
                x:Name="hashtagsEntry"
                Placeholder="Hashtagek (pl.: #legszebb)"/>
            <Button
                Text="Fotó feltöltése"
                x:Name="addPhotoButton"
                Clicked="addPhotoButton_ClickedAsync"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>