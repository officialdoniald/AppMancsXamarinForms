<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMancsXamarinForms.UploadPhotoPage"
             Title="Kép hozzáadása">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout
               Style="{StaticResource NormalStackLayout}">
                <Button
                Text="Galéria"
                x:Name="galleryButton"
                Clicked="galleryButton_ClickedAsync"
                Style="{StaticResource NormalButton}"/>
                <Image
                x:Name="pictureImage"
                Aspect="AspectFit"
                HeightRequest="300"/>
                <Picker
                x:Name="petPicker"
                Title="Háziállataim"
                TextColor="#FFCBB6"
                VerticalOptions="Center"
                SelectedIndexChanged="petPicker_SelectedIndexChanged"/>
                <Entry 
                x:Name="hashtagsEntry"
                Placeholder="Hashtagek (pl.: #legszebb)"
                Style="{StaticResource NormalEnrty}"/>
                <Button
                Text="Fotó feltöltése"
                x:Name="addPhotoButton"
                Clicked="addPhotoButton_ClickedAsync"
                Style="{StaticResource NormalButton}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>